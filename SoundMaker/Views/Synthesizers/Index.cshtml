<div class="beatcss">
 


<label for="drumVolume">DRUM VOLUME</label>
<input type="range" id="drumVolume" class="control-drumVolume" min="0" max="1" value=".5" list="gain-vals" step="0.01"
  data-action="drumVolume" />

<label for="lowpass">LOWPASS</label>
<input type="range" id="lowpass" class="control-lowpass" list="lowpass-vals" min="250" max="5000" value="5000" step="1"
  data-action="lowpass" />

<label for="delayDrum">DELAY</label>
<input type="range" id="delayDrum" class="control-delayDrum" list="delayDrum-vals" min="0" max="2" value="0" step="0.01"
  data-action="delayDrum" />
<br>
<button data-playing="false" id="techno-play" class="beatboxplay" role="switch" aria-checked="false">
    <span>TECHNO >|| </span>
</button>

<button data-playing="false" id="drum-bass-play"class="beatboxplay" role="switch" aria-checked="false">
