<link rel="stylesheet" href="~/css/synthesizers.css" />
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap" rel="stylesheet">
  </head>


<div class="row">
  <div class="column">

<button data-playing="false" id="oscillator1-play" class="tape-controls-play" role="switch" aria-checked="false">
  <span>OSC1 PLAY/PAUSE</span>
</button>
<br><br>

<label for="freq">FREQ</label>
<input type="range" orient="vertical" id="osc1-freq" class="control-freq" list="freq-vals" min="0" max="10000" value="0" step="0.1"
  data-action="freq" />

<label for="delay">DELAY</label>
  <input type="range" orient="vertical" id="osc1-delay" class="control-delay" list="delay-vals" min="0" max="2" value="0" step="0.01"
  data-action="delay" />
 
<label for="volume">VOL</label>
<input type="range" orient="vertical" id="osc1-volume" class="control-volume" min="0" max="1" value=".2" list="gain-vals" step="0.01"
  data-action="volume" />

<br>
<label for="volume">L</label><input type="range" id="osc1-panner" class="control-panner" list="pan-vals" min="-1" max="1" value="0" step="0.01" data-action="panner" />R
<br>



    <div class="field">
      <section class="section">
        <span class="select">
          <select id="osc1-waveform" name="waveform">
            <option value="triangle">TRIANGLE</option>
            <option value="sawtooth">SAWTOOTH</option>
            <option value="sine">SINE</option>
            <option value="square">SQUARE</option>
          </select>
        </span>
      </section>
    </div><br>
</div>
  <div class="column">
